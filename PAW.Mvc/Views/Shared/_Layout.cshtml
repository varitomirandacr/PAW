<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAW.Mvc</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PAW.Mvc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/darkly/bootstrap.min.css" rel="stylesheet">
</head>
@Html.Partial("Partial/ModalView")
<body>
    <header class="custom-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-for-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PAW.Mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-for-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-for-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-for-dark" asp-area="" asp-controller="Catalog" asp-action="Index">Catalog</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PAW.Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const drawer = document.getElementById('searchDrawer');
            const openBtn = document.getElementById('openDrawer');
            const closeBtn = document.getElementById('closeDrawer');

            openBtn?.addEventListener('click', function () {
                drawer.style.transform = 'translateX(0%)';
            });

            closeBtn?.addEventListener('click', function () {
                drawer.style.transform = 'translateX(100%)';
            });
        });

        function handleCriteriaChange(criteria) {
            const valueContainer = document.getElementById('valueContainer');
            const rangeContainer = document.getElementById('rangeContainer');

            if (criteria === "Equals" || criteria === "Contains") {
                valueContainer.classList.remove('d-none');
                rangeContainer.classList.add('d-none');
            } else if (criteria === "GreaterThanOrEqual" || criteria === "LessThanOrEqual") {
                valueContainer.classList.add('d-none');
                rangeContainer.classList.remove('d-none');
            } else {
                valueContainer.classList.add('d-none');
                rangeContainer.classList.add('d-none');
            }
        }
    </script>

</body>
</html>
